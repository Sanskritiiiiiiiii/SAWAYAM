{
  "design_system": {
    "identity": {
      "name": "SWAYAM",
      "tagline": "Smart Work Assurance for Women",
      "archetype": "The Modern Guardian",
      "vibe": "Empowering, Safe, Professional, Warm",
      "theme_mode": "light"
    },
    "typography": {
      "font_family": {
        "heading": "Manrope, sans-serif",
        "body": "Public Sans, sans-serif",
        "mono": "JetBrains Mono, monospace"
      },
      "google_fonts_url": "https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;800&family=Public+Sans:wght@300;400;500;600&family=JetBrains+Mono:wght@400&display=swap",
      "scale": {
        "h1": "text-4xl md:text-6xl font-extrabold tracking-tight leading-none",
        "h2": "text-3xl md:text-4xl font-bold tracking-tight",
        "h3": "text-2xl font-semibold tracking-tight",
        "body_lg": "text-lg leading-relaxed",
        "body_base": "text-base leading-relaxed text-muted-foreground",
        "caption": "text-sm font-medium tracking-wide uppercase text-muted-foreground"
      }
    },
    "colors": {
      "palette": {
        "primary": {
          "DEFAULT": "#EA580C",
          "foreground": "#FFFFFF",
          "description": "Saffron Blaze - Energy, Empowerment (Tailwind orange-600)"
        },
        "secondary": {
          "DEFAULT": "#0F766E",
          "foreground": "#FFFFFF",
          "description": "Teal Shield - Safety, Trust (Tailwind teal-700)"
        },
        "background": "#FFFBF7",
        "foreground": "#1C1917",
        "muted": "#F5F5F4",
        "accent": "#FFEDD5",
        "destructive": "#DC2626",
        "success": "#15803D",
        "warning": "#F59E0B"
      },
      "gradients": {
        "hero": "bg-gradient-to-br from-orange-50 via-white to-teal-50",
        "safety_card": "bg-gradient-to-r from-teal-50 to-white border-l-4 border-teal-600",
        "sos_active": "bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-red-500 via-red-600 to-red-700"
      }
    },
    "spacing": {
      "container_padding": "px-4 md:px-8 lg:px-12",
      "section_spacing": "py-16 md:py-24",
      "element_spacing": "space-y-6"
    },
    "visual_enhancers": {
      "radius": "rounded-xl",
      "shadows": {
        "card": "shadow-[0_2px_8px_rgba(0,0,0,0.08)] hover:shadow-[0_8px_24px_rgba(0,0,0,0.12)] transition-all duration-300",
        "floating": "shadow-[0_12px_40px_rgba(0,0,0,0.12)]"
      },
      "borders": "border border-stone-200",
      "glass": "bg-white/80 backdrop-blur-md border border-white/20"
    }
  },
  "components": {
    "buttons": {
      "primary": "bg-primary text-primary-foreground hover:bg-primary/90 h-12 px-8 rounded-full font-semibold shadow-lg hover:shadow-xl transition-all active:scale-95",
      "secondary": "bg-white text-secondary border-2 border-secondary/20 hover:border-secondary hover:bg-secondary/5 h-12 px-8 rounded-full font-medium transition-all",
      "sos": "bg-destructive text-white h-16 w-16 rounded-full shadow-[0_0_0_4px_rgba(220,38,38,0.2)] animate-pulse hover:scale-105 font-black tracking-widest"
    },
    "cards": {
      "job_card": "bg-white rounded-xl p-6 border border-stone-100 shadow-sm hover:border-orange-200 transition-colors group relative overflow-hidden",
      "safety_badge": "inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-50 text-teal-700 text-xs font-bold uppercase tracking-wider border border-teal-100"
    },
    "inputs": {
      "default": "h-12 bg-stone-50 border-stone-200 focus:ring-2 focus:ring-orange-500/20 focus:border-orange-500 rounded-lg transition-all"
    }
  },
  "layout_strategies": {
    "dashboard": {
      "type": "bento_grid",
      "classes": "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6",
      "instructions": "Use Mode B (High Density) for dashboards. Summary metrics take col-span-1. Main job feed takes col-span-2 row-span-2."
    },
    "landing": {
      "type": "asymmetric_marketing",
      "classes": "grid grid-cols-1 lg:grid-cols-12 gap-12 items-center",
      "instructions": "Hero section should use 60/40 split. Text on left, large emotive image on right with floating safety cards."
    }
  },
